<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="PREFERENCES">

        <ListPreference
            app:defaultValue="DefaultLight"
            app:entries="@array/themeColMain"
            app:entryValues="@array/themeColMain"
            app:key="themeMain"
            app:title="Theme: Main Colors"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="DefaultLight"
            app:entries="@array/themeColSecond"
            app:entryValues="@array/themeColSecond"
            app:key="themeSecond"
            app:title="Theme: Second Colors"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="MANAGE YOUR DATA">

        <SwitchPreferenceCompat
            app:key="trackProgress"
            app:summaryOff="OFF"
            app:summaryOn="ON"
            app:title="Keep track of your progress" />

    </PreferenceCategory>
</PreferenceScreen>